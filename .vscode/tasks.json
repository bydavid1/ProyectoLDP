{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++ Build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++11",
        "-g",
        "-o",
        "${workspaceFolder}/build/main.exe",
        "-I${workspaceFolder}/include",
        "${workspaceFolder}/Main.cpp",
        "${workspaceFolder}/src/*.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
